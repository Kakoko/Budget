<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <Button
        android:id="@+id/btnBasicBudget"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="basicBudget"
        android:text="Basic Budget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdvancedBudget"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="103dp"
        android:onClick="advancedBudget"
        android:text="Advanced Budget"
        app:layout_constraintEnd_toEndOf="@+id/btnBasicBudget"
        app:layout_constraintTop_toBottomOf="@+id/btnBasicBudget" />
</android.support.constraint.ConstraintLayout>